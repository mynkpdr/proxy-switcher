{
  "manifest_version": 3,
  "name": "Proxy Switcher",
  "version": "1.0.0",
  "description": "Easy proxy switching for development and testing with support for Burp Suite, SOCKS5, and HTTP proxies",
  "permissions": [
    "proxy",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Proxy Switcher",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}